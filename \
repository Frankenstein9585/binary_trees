/**
 * binary_tree_leaves - measures the size of a binary tree
 *
 * @tree: pointer to the root node of the tree
 *
 * Return: the size of the tree, otherwise 0
 */
#include "binary_trees.h"
size_t binary_tree_leaves(const binary_tree_t *tree)
{
	if (tree == NULL)
		return (0);

	if (tree->left == NULL and tree->right == NULL)
	{	
		size_t left_size = binary_tree_leaves(tree->left);
		size_t right_size = binary_tree_leaves(tree->right) + 1;

		return (right_size + left_size);

	}
}
